    <link rel="stylesheet" href="wea.css">
    <script src="wea.js"></script>
</head>
<body>
    <div id="wither">
        <label for="city">Enter City:</label>
        <input type="text" id="citi" placeholder="City">
        <button onclick="getWeather()">Get Weather</button>
        <div id="weather-info"></div>
    </div>
